<div class="container-custom">

    <div class="row">

        <div class="col-md-8">
            <img id="imgmoto" src="/images/honda-monkey-2.webp">
        </div>

        <div class="col-md-4">
            <h1 style="font-weight: 100">Nueva motocicleta</h1>

            <form action="/motorbikes/new" method="POST" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="name-input">Modelo de la motocicleta</label>
                    <input name="name" type="text" class="form-control" id="name-input">
                </div>

                
                 
                 <div class="form-group">
                    <label for="description-input">Descripcion</label>
                    <input name="description" type="text" class="form-control" id="description-input">
                </div>

                <div class="form-group">
                    <label for="brand">Marca de la moto</label>
                    <select name="brand" class="form-control" id="brand">

                        <option>Seleccionar</option>

                        {{#each brands}}
                        <option value="{{this}}">{{this}}</option> {{!-- id con barra baja objeto sin barra baja es un
                        string --}}
                        {{/each}}

                    </select>
                </div>


                <div class="form-group">
                    <label for="typesMotorbike">Tipo de moto</label>
                    <select name="typesMotorbike" class="form-control" id="typesMotorbike">
                
                        <option>Seleccionar</option>
                
                        {{#each typesMotorbike}}
                        <option value="{{this}}">{{this}}</option> {{!-- id con barra baja objeto sin barra baja es un
                        string --}}
                        {{/each}}
                
                    </select>
                </div>

                <div class="form-group">
                    <label for="license">Tipo de Permiso</label>
                    <select name="license" class="form-control" id="license">
                
                        <option>Seleccionar</option>
                
                        {{#each license}}
                        <option value="{{this}}">{{this}}</option> {{!-- id con barra baja objeto sin barra baja es un
                        string --}}
                        {{/each}}
                
                    </select>
                </div>

                <div class="form-group">
                    <label for="cc-input">Cilindrada</label>
                    <input name="cc" type="number" class="form-control" id="cc-input">
                </div>

                <div class="form-group">
                    <label for="weight-input">Peso</label>
                    <input name="weight" type="number" class="form-control" id="weight-input">
                </div>

                <div class="form-group">
                    <label for="imageURL-input">Imagen</label>
                    <input name="imageURL" type="file" class="form-control" id="imageURL-input">
                </div>

                

                <button type="submit" class="btn btn-dark">Crear motocicleta</button>
                
                <a href="/motorbikes/list" class="btn btn-dark">Listado de Motos</a>
                <a href="/" class="btn btn-dark">Volver</a>

            </form>
        </div>

    </div>
</div>