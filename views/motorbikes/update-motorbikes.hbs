<div class="container">

    <div class="row">

        <div class="col-md-6">
            <h1 style="font-weight: 100">Editar motocicleta</h1>
        </div>

        <div class="col-md-6">

            <form action="/motorbikes/edit?id={{motorbike.id}}" method="POST">
                <div class="form-group">
                    <label for="name-input">Modelo de la motocicleta</label>
                    <input name="name" type="text" class="form-control" id="name-input" value="{{motorbike.name}}">
                </div>



                <div class="form-group">
                    <label for="description-input">Descripcion</label>
                    <input name="description" type="text" class="form-control" id="description-input"value="{{motorbike.description}}">
                </div>

                <div class="form-group">
                    <label for="brand">Marca de la moto</label>
                    <select name="brand" class="form-control" id="brand"value="{{motorbike.brand}}">

                        <option>Seleccionar</option>

                        {{#each brands}}
                        <option value="{{this}}">{{this}}</option> {{!-- id con barra baja objeto sin barra baja es un
                        string --}}
                        {{/each}}

                    </select>
                </div>


                <div class="form-group">
                    <label for="typesMotorbike">Tipo de moto</label>
                    <select name="typesMotorbike" class="form-control" id="typesMotorbike">

                        <option>Seleccionar</option>

                        {{#each typesMotorbike}}
                        <option value="{{this}}">{{this}}</option> {{!-- id con barra baja objeto sin barra baja es un
                        string --}}
                        {{/each}}

                    </select>
                </div>

                <div class="form-group">
                    <label for="license">Tipo de Permiso</label>
                    <select name="license" class="form-control" id="license">

                        <option>Seleccionar</option>

                        {{#each license}}
                        <option value="{{this}}">{{this}}</option> {{!-- id con barra baja objeto sin barra baja es un
                        string --}}
                        {{/each}}

                    </select>
                </div>

                <div class="form-group">
                    <label for="cc-input">Cilindrada</label>
                    <input name="cc" type="number" class="form-control" id="cc-input"value="{{motorbike.cc}}">
                </div>

                <div class="form-group">
                    <label for="weight-input">Peso</label>
                    <input name="weight" type="number" class="form-control" id="weight-input"value="{{motorbike.weight}}">
                </div>

                <div class="form-group">
                    <label for="imageURL-input">Imagen</label>
                    <input name="imageURL" type="text" class="form-control" id="imageURL-input"value="{{motorbike.imageURL}}">
                </div>

                <button type="submit" class="btn btn-dark">Editar motocicleta</button>
                <a href="/motorbikes/list" class="btn btn-dark">Volver</a>

            </form>
        </div>

    </div>
</div>